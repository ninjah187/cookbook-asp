@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="container">
    <form class="cb-form" action="/Login/Authenticate" method="POST">
        <div class="form-group">
            <label for="cb-login-input">Login:</label>
            <input type="text" id="cb-login-input" class="form-control" name="login" />
        </div>
        <div class="form-group">
            <label for="cb-password-input">Password:</label>
            <input type="password" id="cb-password-input" class="form-control" name="password" />
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </form>
</div>